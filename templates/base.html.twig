{% import 'macro/messages.html.twig' as messages %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title>Loïc Sapone - Développeur web</title>
        <meta name="description" content="Développeur web basé à Grenoble - associé chez Mezcalito, compétant en backend et devops">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="min-h-screen bg-primary text-white">
        {% block body %}{% endblock %}

        {% if app.request.hasPreviousSession %}
            {% for message in app.flashes('success') %}
                {{ messages.success(message) }}
            {% endfor %}

            {% for message in app.flashes('error') %}
                {{ messages.error(message) }}
            {% endfor %}
        {% endif %}
    </body>
</html>
